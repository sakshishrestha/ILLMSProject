@page "/managerole"

@using ILLMS.models
@using ILLMS.service
@inject RegisteredUserHandler userService

<h3>Manage User Roles</h3>

@if (users != null && users.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Institutional Role</th>
            <th>Is Registered</th>
            <th>Multifactor Authentication Enabled</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.InstitutionalRole</td>
                <td>@(user.IsRegistered ? "Yes" : "No")</td>
                <td>@(user.MultifactorAuthenticationEnabled ? "Yes" : "No")</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}

@code {
    List<RegisteredUser> users;

    protected override void OnInitialized()
    {
        // Fetch the list of registered users from the service
        users = userService.GetAllUsers();
    }
}